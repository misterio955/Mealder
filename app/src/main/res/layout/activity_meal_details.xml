<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MealDetailsActivity">

    <ImageView
        android:id="@+id/mealPhoto"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/mealName"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/mealPhoto"
        android:layout_below="@+id/mealPhoto"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/mealPrice"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/mealPhoto"
        android:layout_below="@+id/mealPhoto"
        android:layout_marginStart="220dp"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/mealDescription"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/mealName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mealIngredients"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/mealDescription"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mealSteps"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_below="@+id/mealIngredients"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:text="@string/back_to_home" />

</RelativeLayout>